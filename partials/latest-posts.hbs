<section class="latest-posts">
    <div class="container">

        <h2>Latest from the Commons</h2>

        <div class="post-grid">

            {{#foreach posts limit="3"}}
                <article class="post-card">

                    {{#if feature_image}}
                        <a href="{{url}}">
                            <img src="{{feature_image}}" alt="{{title}}">
                        </a>
                    {{/if}}

                    <div class="post-meta">
                        {{primary_tag.name}} • {{date format="MMM DD, YYYY"}}
                    </div>

                    <h3>
                        <a href="{{url}}">{{title}}</a>
                    </h3>

                    <p>{{excerpt words="20"}}</p>

                    <a href="{{url}}" class="read-more">
                        Read Article →
                    </a>

                </article>
            {{/foreach}}

        </div>

    </div>
</section>
