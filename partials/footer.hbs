            <h2>
                Support the infrastructure of a 
                <span>better democracy</span>
            </h2>

            <p>
                Your contribution helps us keep our tools open-source and provides direct support to organizers in under-served neighborhoods.
            </p>

            <div class="donate-buttons">
                <a href="/donate/"class="btn-primary"> 
                    Donate Now
                </a>

                <a href="#" class="btn-secondary">
                    Become a Monthly Member
                </a>
            </div>

        </div>

    </section>


    <!-- ============================= -->
    <!-- FOOTER LINKS SECTION -->
    <!-- ============================= -->

    <section class="footer-links">

        <div class="footer-container">

            <!-- BRAND COLUMN -->
            <div class="footer-col brand-col">

                {{#if @site.logo}}
                    <img src="{{@site.logo}}" alt="{{@site.title}}" class="footer-logo">
                {{/if}}

                <p>
                    Legal entity: <strong>Avantika Foundation</strong><br>
                    Dedicated to strengthening civic agency through design, research, and organizing.
                </p>

                <div class="social-links">

                    <a href="https://www.instagram.com/canopy.commons"
                       target="_blank"
                       rel="noopener"
                       class="social-icon"
                       aria-label="Instagram">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8">
                            <rect x="2" y="2" width="20" height="20" rx="5"/>
                            <circle cx="12" cy="12" r="4"/>
                            <circle cx="17" cy="7" r="1.5"/>
                        </svg>
                    </a>

                    <a href="https://www.linkedin.com/company/canopy-commons/"
                       target="_blank"
                       rel="noopener"
                       class="social-icon"
                       aria-label="LinkedIn">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8">
                            <path d="M16 8a6 6 0 016 6v6h-4v-6a2 2 0 00-2-2 2 2 0 00-2 2v6h-4v-12h4v2"/>
                            <rect x="2" y="9" width="4" height="12"/>
                            <circle cx="4" cy="4" r="2"/>
                        </svg>
                    </a>

                </div>

            </div>


            <!-- QUICK LINKS (Ghost Dynamic) -->
            <div class="footer-col">
                <h4>Quick Links</h4>

                {{#if @site.secondary_navigation}}
                    <ul>
                        {{#foreach @site.secondary_navigation}}
                            <li>
                                <a href="{{url}}">{{label}}</a>
                            </li>
                        {{/foreach}}
                    </ul>
                {{/if}}

            </div>


            <!-- CONTACT -->
            <div class="footer-col">
                <h4>Contact</h4>

                <p>Questions about our work?</p>

                {{#if @site.email}}
                    <a href="mailto:{{@site.email}}" class="email-link">
                        {{@site.email}}
                    </a>
                {{else}}
                    <a href="mailto:divya@canopy-commons.org" class="email-link">
                        divya@canopy-commons.org
                    </a>
                {{/if}}

            </div>


            <!-- WEBSITE DESIGN -->
            <div class="footer-col">
                <h4>Website Design</h4>

                <div class="design-credits">

                    <div class="design-org">
                       
                        <img src="{{asset "images/oasis_logo.jpeg"}}"
                             alt="Oasis"
                             class="design-logo">
                    </div>

                    <div class="design-org">
                        
                        <img src="{{asset "images/design_logo.png"}}"
                             alt="Terregeneration Solutions"
                             class="design-logo">
                    </div>

                </div>

            </div>

        </div>

