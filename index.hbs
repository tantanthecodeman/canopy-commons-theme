{{!< default}}

<main class="site-main">

    <section class="hero-section">

        <!-- Background Decoration -->
        <div class="hero-bg-decoration"></div>

        <div class="hero-container">

            <!-- LEFT CONTENT -->
            <div class="hero-content fade-in-left">

                <div class="hero-badge">
                    Building Resilient Local Democracies
                </div>

                <h1 class="hero-title">
                    Building local democracy,
                    <span class="hero-highlight">one community</span>
                    at a time
                </h1>

                <p class="hero-description">
                    Canopy Commons builds civic infrastructure that helps people participate
                    meaningfully in decisions that shape their lives, where they live.
                </p>

                <div class="hero-buttons">
                    <a href="/our-work/" class="btn-primary">
                        Learn how we work →
                    </a>

                    <a href="/our-story/" class="btn-secondary">
                        Explore our story
                    </a>
                </div>

            </div>

            <!-- RIGHT DIAGRAM -->
            <div class="hero-diagram fade-in-scale">

                {{> hero-diagram}}

            </div>

        </div>

    </section>
   

</main>
